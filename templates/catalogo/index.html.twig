{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
    .accion{ cursor:pointer }
    .txta-own{
        background-color: rgba(40, 40, 40, .05);
        min-width: 100% !important;
        max-width: 100% !important;
        padding: 4px !important;
    }
</style>
{% endblock %}

{% block body %}
{{ include('catalogo/form.html.twig') }}

<div class="header bg-indigo"><h2>CATÁLOGO</h2></div>
<div class="body">
    <div class="row clearfix">
        <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
        {% if 'catalogo_insertar' in permisos %}   
            <button id="new" type="button" class="btn bg-indigo waves-effect" title="Nuevo">
                <i class="material-icons">add</i>
            </button>
        {% endif %}   
        </div>
    </div>
    {% if 'home_catalogo' in permisos and objects %}
    <div class="row">
        <div class="body table-responsive">
            <table id="data_table" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                <thead>
                <tr>
                    <th class="order_by_th" data-name="names">Sistema </th>
                    <th class="order_by_th" data-name="phone">Descripción </th>
                    <th class="order_by_th" data-name="phone">Dueño </th>
                    <th class="order_by_th" data-name="phone">Url </th>
                    <th class="actions_header">Acciones </th>
                </tr>
                </thead>
                <tbody id="table_content">
                {{ include('catalogo/table.html.twig') }}
                </tbody>
            </table>
        </div>
    </div>
    {% else %}
    <div class="col-xs-9 col-sm-10 col-md-10 col-lg-10"></div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script src="resources/js/functions.js"></script>

<script>
    main_route = '/catalogo'

    function default_values() {
        page_nr = 1
        max_entries = 10
        like_search = ""
        order_by = ""
        ascendant = true
    }
    default_values()
</script>

<script>
    $('#new').click(function () {
        $('#sistema').val('')
        $('#descripcion').val('')
        $('#duenio').val('')
        $('#url').val('')

        clean_form()
        verif_inputs()
        $('#id_div').hide()
        $('#insert').show()
        $('#update').hide()
        $('#form').modal('show')
    })
    
    $('#insert').click(function () {
        objeto = JSON.stringify({
            'sistema': $('#sistema').val(),
            'descripcion': $('#descripcion').val(),
            'duenio': $('#duenio').val(),
            'url': $('#url').val()
        })
       ajax_call_validation("/catalogo_insertar", {object: objeto}, null, main_route)
    })

    function attach_edit() {
        $('.edit').click(function () {
            obj = JSON.stringify({
                'id': parseInt(JSON.parse($(this).attr('data-json')))
            });
            ajax_call_get("/catalogo_editar",{
                object: obj
            },function(response){
                var self = JSON.parse(response);
                $('#id').val(self.id)
                $('#sistema').val(self.sistema)
                $('#descripcion').val(self.descripcion)
                $('#duenio').val(self.duenio)
                $('#url').val(self.url)

                clean_form()
                verif_inputs()
                $('#id_div').show()
                $('#insert').hide()
                $('#update').show()
                $('#form').modal('show')
            })
        })
    }

    $('#update').click(function () {
        objeto = JSON.stringify({
            'id': parseInt(JSON.parse($('#id').val())),
            'sistema': $('#sistema').val(),
            'descripcion': $('#descripcion').val(),
            'duenio': $('#duenio').val(),
            'url': $('#url').val()
        })
        ajax_call_validation("/catalogo_actualizar", {object: objeto}, null,  main_route)
    })
    reload_form()
</script>

<script>
    attach_edit()

    $('.delete').click(function () {
        id = parseInt(JSON.parse($(this).attr('data-json')))
        enabled = false
        swal({
            title: "¿Desea dar de baja el catálogo?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#004c99",
            cancelButtonColor: "#F44336",
            confirmButtonText: "Aceptar",
            cancelButtonText: "Cancelar"
        }).then(function () {
            ajax_call(
                "/catalogo_eliminar", 
                { id: id, enabled: enabled, _xsrf: getCookie("_xsrf") }, 
                null, 
                function () { setTimeout(function(){window.location = main_route}, 1000); }
            )
        })
    })

</script>

{% endblock %}